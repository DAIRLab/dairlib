pybind_py_library(
    name = "framework_py",
    cc_deps = [
        "//lcmtypes:lcmt_robot",
        "//systems/framework:lcm_driven_loop",
        "//systems/framework:vector",
        "@drake//:drake_shared_library",
    ],
    cc_so_name = "framework",
    cc_srcs = ["framework_py.cc"],
    py_deps = [
        "@drake//bindings/pydrake",
        ":module_py",
    ],
    py_imports = ["."],
