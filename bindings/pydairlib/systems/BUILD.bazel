    cc_srcs = ["robot_lcm_systems_py.cc"],
    py_deps = [
        "@drake//bindings/pydrake",
        ":module_py",
    ],
    py_imports = ["."],
)

pybind_py_library(
    name = "plant_visualizer_py",
    cc_deps = [
        "//systems:plant_visualizer",
        "@drake//:drake_shared_library",
    ],
    cc_so_name = "plant_visualizer",
    cc_srcs = ["plant_visualizer_py.cc"],
    py_deps = [
        "@drake//bindings/pydrake",
        ":module_py",
    ],
    py_imports = ["."],
)

pybind_py_library(
    name = "primitives_py",
    cc_deps = [
        "//systems/primitives",
        "@drake//:drake_shared_library",
    ],
    cc_so_name = "primitives",
    cc_srcs = ["primitives_py.cc"],
    py_deps = [
        "@drake//bindings/pydrake",
        ":module_py",
    ],
    py_imports = ["."],
