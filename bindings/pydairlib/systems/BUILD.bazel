    py_deps = [
        "@drake//bindings/pydrake",
        ":module_py",
    ],
    py_imports = ["."],
)

pybind_py_library(
    name = "footstep_planning_py",
    cc_deps = [
        "//systems/controllers/footstep_planning:alip_miqp",
        "//systems/controllers/footstep_planning:alip_mpfc_system",
