    name = "camera_utils",
    srcs = ["camera_utils.cc"],
    hdrs = ["camera_utils.h"],
    deps = [
        "//common:find_resource",
        "@drake//:drake_shared_library",
    ],
)

cc_library(
    name = "grid_map_visualizer",
    srcs = ["grid_map_visualizer.cc"],
    hdrs = ["grid_map_visualizer.h"],
